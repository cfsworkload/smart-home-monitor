extends layout

block content
  .container
    h1.app-title Smart Home Monitor
    p.description Current data from IOT Device
    .col-md-6
      h2.subtitle Appliance Information
      .output
        h2 Current energy usage (max 5000W)
        p#power Waiting for data...
      .output
        h2 Longitude
        p#loclong Waiting for data...
      .output
        h2 Latitude
        p#loclat Waiting for data...
      .output
        h2 PolicyID
        p#policyid Waiting for data...
    .col-md-6
      h2.subtitle List of approved electricians in appliance's area
      #map-canvas(name="map-canvas")
      h2.subtitle
        | Likelihood client will churn: 
        span.boolean Waiting for data...
      p Based on current energy usage and churn decision tree
  .container
    h2.subtitle Churn decision tree reference (generated by dashDB)
    img#decision-tree(src="images/power_decision_tree.jpg")
